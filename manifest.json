{
  "manifest_version": 3,
  "name": "Lập's Extension",
  "version": "1.7",
  "description": "extension của Lập",
  "options_page": "options.html",
  "permissions": [
    "activeTab", "storage","tabs"
  ],
  "host_permissions": [
    "*://script.google.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["handleBlocking.js"],
      "run_at": "document_start",
      "all_frames": false 
    },
    {
      "matches": ["*://*/*"],
      "exclude_matches": ["*://open.spotify.com/*"],
      "js": ["media_detector.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["*://open.spotify.com/*"],
      "js": ["spotify_detector.js"],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": ["*://*.youtube.com/*", "*://youtube.com/*"],
      "js": [
        "config.js","youtube.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.google.com/search*","*://google.com/search*"],
      "js": ["google_search.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.ticketbox.vn/*", "*://ticketbox.vn/*"],
      "js": ["ticketbox.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://calendar.google.com/calendar/u/0/r/eventedit?ofe=true*"],
      "js": ["google_calendar.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://facebook.com/*"
      ],
      "js": ["config.js","facebook_init.js"],
      "run_at": "document_start" 
    },
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://facebook.com/*"
      ],
      "js": [
        "facebook.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "website_blocklist.json"
      ],
      "matches": ["*://*/*"]
    },
    {
      "resources": ["football-teams.json","handleFootballMatch.js","image/add.png"],
      "matches": ["*://*.google.com/*","*://google.com/*"]
    },
    {
      "resources": ["image/add.png"],
      "matches": ["*://*.ticketbox.vn/*", "*://ticketbox.vn/*"]
    },
    {
      "resources": ["facebook_blocklist.json"],
      "matches": ["*://*.facebook.com/*","*://facebook.com/*"]
    }  
  ],
  "commands": {
    "open_command_hub": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Mở Bảng lệnh (Lập's Hub)"
    },
    "open_option": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Mở file option.html"
    },
    "open-extensions-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open chrome://extensions/"
    },
    "open_media_hub": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Mở Media Hub"
    }    
  }  
}