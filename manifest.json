{
  "manifest_version": 3,
  "name": "Extension của Lập",
  "version": "1.0",
  "description": "Extension của Lập",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "windows",
    "storage",
    "notifications"
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["add.png", "hoanglap3011.html", "popup.html", "popup.css", "teams.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "open_hoanglap3011": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Mở trang chủ của extension hoanglap3011"
    },
    "open_panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "description": "Mở panel"
    }
    ,"call_api_and_open_tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Gọi API, lấy link từ JSON và mở tab mới"
    }
  }
}
